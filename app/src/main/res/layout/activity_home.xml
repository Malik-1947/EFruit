<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".HomeActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/home"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pacifico"
        android:gravity="center"
        android:text="Dashboard"
        android:textColor="@color/black"
        android:textSize="45dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/orderVegetables"
            android:layout_weight="1"
            android:padding="10dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="11dp"
            app:cardBackgroundColor="@color/Off_White"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Off_White"
                >
                <TextView
                    android:id="@+id/compassicontext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/compassicon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/aclonica"
                    android:text="Vegetables"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/compassicon"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:foregroundGravity="center_vertical|center_horizontal"
                    app:srcCompat="@drawable/cabbage" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!--PLACE 2-->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:id="@+id/orderFruits"
            app:cardElevation="5dp"
            app:cardCornerRadius="11dp"
            app:cardBackgroundColor="@color/Off_White"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Off_White">

                <TextView
                    android:id="@+id/numerologytext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/numerology"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/aclonica"
                    android:text="Fruits"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/numerology"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:foregroundGravity="center_vertical|center_horizontal"
                    app:srcCompat="@drawable/apple" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>


</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="logout"
        android:id="@+id/logOutUser"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/U.S.Flag"
        android:textAllCaps="true"
        android:fontFamily="@font/amaranth"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>

</LinearLayout>