<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Peach"
    tools:context=".AdminDashboard">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/admin"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pacifico"
        android:gravity="center"
        android:text="Dashboard"
        android:textColor="@color/black"
        android:textSize="45dp"
        android:layout_marginTop="-20dp"/>


    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:id="@+id/addproduct"
                android:layout_weight="1"
                android:padding="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="11dp"
                app:cardBackgroundColor="@color/Off_White"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FF9D08"
                    >
                    <TextView
                        android:id="@+id/compassicontext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/compassicon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/aclonica"
                        android:text="Add Product"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/compassicon"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:foregroundGravity="center_vertical|center_horizontal"
                        app:srcCompat="@drawable/add" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!--PLACE 2-->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:id="@+id/getorders"
                app:cardElevation="5dp"
                app:cardCornerRadius="11dp"
                app:cardBackgroundColor="@color/Off_White"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FF9D08">

                    <TextView
                        android:id="@+id/numerologytext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/numerology"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/aclonica"
                        android:text="Orders"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/numerology"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:foregroundGravity="center_vertical|center_horizontal"
                        app:srcCompat="@drawable/orders" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!--PLACE 3-->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/deliverystatus"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="11dp"
                app:cardBackgroundColor="@color/Off_White"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FF9D08">

                    <TextView
                        android:id="@+id/parv_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/parv_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/aclonica"
                        android:gravity="center"
                        android:text="Delivery"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/parv_icon"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:foregroundGravity="center_vertical|center_horizontal"
                        app:srcCompat="@drawable/delivery" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>